<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxWidth="400dp"
    android:layout_gravity="center"
    android:background="#33679C">


    <EditText
        android:id="@+id/mname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:width="400dp"
        android:background="#A2C8DA"
        android:hint="Movie Name"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />


    <EditText
        android:id="@+id/mtype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:width="400dp"
        android:background="#A2C8DA"
        android:hint="Movie Type"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mname"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/mactor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:width="400dp"
        android:background="#A2C8DA"
        android:hint="Movie Actor"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mtype"
        app:layout_constraintVertical_bias="0.065" />

    <EditText
        android:id="@+id/mactress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:width="400dp"
        android:background="#A2C8DA"
        android:hint="Movie Actress"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mryear"
        app:layout_constraintTop_toBottomOf="@+id/mactor"
        app:layout_constraintVertical_bias="0.074" />

    <EditText
        android:id="@+id/mryear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:width="400dp"
        android:background="#A2C8DA"
        android:hint="Movie Release Year"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mactress"
        app:layout_constraintVertical_bias="0.083" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="238dp"
        android:background="#2955F1"
        android:text="REGISTER"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mryear" />
</androidx.constraintlayout.widget.ConstraintLayout>